{
    "compilerOptions": {
        "jsx": "react",
        "target": "es6",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "module": "ESNext",
        "skipLibCheck": true,
        "allowJs": true,
        "checkJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*", "vite.config.js"],
    "exclude": ["node_modules", "**/*.test.js"]
}
